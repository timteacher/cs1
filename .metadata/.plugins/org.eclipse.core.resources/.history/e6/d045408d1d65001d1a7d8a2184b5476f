package chapter8;

import java.util.*;
public class ToDo {
	private ArrayList<String> items = new ArrayList<String>();
	
	/*
	 * Constructor
	 *  Takes an array of goals and adds into our arraylist of items
	 */
	public ToDo(String[] goals) {
		for (int i=0; i<goals.length; i++) {
			items.add(goals[i]);
		}
	}
	public void speak() {
		System.out.println(items);	
	}
	
}
